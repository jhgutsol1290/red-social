<%include partials/head %>

<div class="container mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
                <div class="card mb-4">
                        <div class="card-header bg-info">
                            <h3 class="card-title text-white">
                                <i class="fas fa-image"></i> Editar video
                            </h3>
                        </div>
                        <div class="card-body">
                            <form action="/video/edit/<%= video._id %>" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="title">Título</label>
                                    <input type="text" name="title" class="form-control" placeholder="Título(máximo 45 caracteres)" id="" maxlength="45" value="<%= video.title %>" autofocus required>
                                </div>
                                <div class="form-group">
                                    <label for="link">Liga</label>
                                    <input type="text" name="link" class="form-control" placeholder="Liga" id="" value="<%= video.link %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="duration">Duración</label>
                                    <input type="number" step="any" name="duration" class="form-control" placeholder="Duración" id="" value="<%= video.duration %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="date">Fecha</label>
                                    <input type="date" name="date" class="form-control" placeholder="date" id="" value="<%= video.date %>" required>
                                </div>
                                <div class="form-group">
                                    <label for="authors">Participantes</label>
                                    <textarea name="authors" class="form-control" placeholder="Participantes del video" rows="5" required><%= video.authors %></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="description">Descripción</label>
                                    <textarea name="description" class="form-control" placeholder="Descripción del programa" rows="5" required><%= video.description %></textarea>
                                </div>
                
                                <div class="form-group">
                                    <button class="btn btn-primary btn-lg"><i class="fa fa-upload"></i> Actualizar</button>
                                </div>
                            </form>
                        </div>
                    </div>
        </div>
    </div>
</div>

<%include partials/footer %>