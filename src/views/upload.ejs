<%include partials/head %>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
                <div class="card">
                        <div class="card-header bg-info">
                            <h3 class="card-title text-white">
                                <i class="fas fa-image"></i> Subir video
                            </h3>
                        </div>
                        <div class="card-body">
                            <form action="/video" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="cutom-file">
                                            <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required autofocus>
                                            <label for="inputGroupFile" class="custom-file-label">Elige imagen</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="title" class="form-control" placeholder="Título(máximo 45 caracteres)" id="" maxlength="45" required>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="link" class="form-control" placeholder="Liga" id="" required>
                                </div>
                                <div class="form-group">
                                    <input type="number" step="any" name="duration" class="form-control" placeholder="Duración" id="" required>
                                </div>
                                <div class="form-group">
                                    <input type="date" name="date" class="form-control" placeholder="date" id="" required>
                                </div>
                                <div class="form-group">
                                    <textarea name="authors" class="form-control" placeholder="Participantes del video" rows="5" required></textarea>
                                </div>
                                <div class="form-group">
                                    <textarea name="description" class="form-control" placeholder="Descripción del programa" rows="5" required></textarea>
                                </div>
                
                                <div class="form-group">
                                    <button class="btn btn-primary btn-lg"><i class="fa fa-upload"></i> Subir</button>
                                </div>
                            </form>
                        </div>
                    </div>
        </div>
    </div>
</div>

<%include partials/footer %>