<%include partials/head %>


<div class="container-fluid">
    <div class="row vdivide">
        <div class="col-md-8 col-md-border">
            <div class="card bg-light mb-3 mx-3">
                <div class="text-center embed-responsive embed-responsive-16by9">
                        <!--<img src="/public/upload/{{image.filename}}" class="img-fluid" alt="img">-->
                    <iframe width="560" height="315" class="embed-responsive-item" src="<%= video.link %>?autoplay=1" frameborder="0" allow="accelerometer; encrypted-media; gyroscope; autoplay; picture-in-picture" allowfullscreen></iframe>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><%- video.title %></h5>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3 p-2 mx-5" style="max-width: 540px;">
                <div class="row no-gutters">
                  <div class="col-md-4">
                    <img src="/public/upload/<%= video.filename %>" class="card-img" alt="...">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%- video.title %></h5>
                      <p class="card-text"><%- video.description %></p>
                      <p class="card-text date-text text-muted"><%- video.date.toISOString() %></p>
                      <p class="card-text">DuraciÃ³n: <span class="duration-text"><%- video.duration %></span> min.</p>
                      <p>Participantes:</p>
                      <ul>
                        <li id="comments-text"><%= video.authors %></li>
                      </ul>
                    </div>
                  </div>
                </div>
            </div>
            <div class="card">
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <button class="btn btn-info" id="btn-like" data-id="<%=video.filename%>">
                        <i class="fas fa-thumbs-up"></i> Like
                    </button>
                    <p>
                        <span class="likes-count"><%- video.likes %></span>
                        <i class="fas fa-heart"></i> 
                    </p>
                    <p>
                        <i class="fas fa-eye"></i> <%- video.views %>
                    </p>
                    <button class="btn btn-danger" id="btn-delete" data-id="<%=video.uniqueId%>">
                        <i class="fa fa-times"></i> Eliminar
                    </button>
                    <a class="btn btn-primary" id="btn-edit" data-id="<%=video._id%>">
                        <i class="fa fa-edit"></i> Editar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/public/js/format.js"></script>


<%include partials/footer %>